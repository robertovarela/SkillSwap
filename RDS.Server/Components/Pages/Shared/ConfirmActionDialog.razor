<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icon" Class="mr-2" Color="@Color"/>
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
        @if (ShowTextField)
        {
            <MudTextField @bind-Value="Message"
                          Label="@TextFieldLabel"
                          Variant="Variant.Outlined"
                          Lines="3"
                          Class="mt-4"/>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancelar</MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="@Color"
                   OnClick="@Submit">
            @ButtonText
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public string Title { get; set; } = "Confirmar Ação";
    [Parameter] public string ContentText { get; set; } = "Você tem certeza?";
    [Parameter] public string ButtonText { get; set; } = "Confirmar";
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.HelpOutline;
    [Parameter] public bool ShowTextField { get; set; }
    [Parameter] public string TextFieldLabel { get; set; } = "Mensagem (opcional)";

    private string Message { get; set; } = "";

    private void Submit() => MudDialog.Close(DialogResult.Ok(Message));
    private void Cancel() => MudDialog.Cancel();
}